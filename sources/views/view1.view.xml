<mvc:View
        displayBlock="true"
        height="100%"
        xmlns="sap.f"
        xmlns:mvc="sap.ui.core.mvc">
    <FlexibleColumnLayout id="flexibleColumnLayout" backgroundDesign="Solid" stateChange="onStateChange">
        <beginColumnPages>
            <mvc:XMLView id="beginView" viewName="sources.views.Master"/>
        </beginColumnPages>
        <midColumnPages>
            <mvc:XMLView id="detailView" viewName="sources.views.Detail"/>
        </midColumnPages>
        <endColumnPages>
            <mvc:XMLView id="testView" viewName="sources.views.Test"/>
        </endColumnPages>
    </FlexibleColumnLayout>
</mvc:View>