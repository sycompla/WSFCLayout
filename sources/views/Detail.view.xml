<mvc:View
        controllerName="sources.controllers.Detail"
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:mvc="sap.ui.core.mvc"
        id="detail">
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Content -->
        <f:content>
            <ToggleButton
                    text="Open"
                    type="Emphasized"
                    press=".onListItemPress"/>

        </f:content>
    </f:DynamicPage>
</mvc:View>